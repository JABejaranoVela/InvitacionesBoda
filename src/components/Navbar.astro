---
const { variant = "solid" } = Astro.props;
const isOverlay = variant === "overlay";
const navClass = isOverlay
  ? "mx-auto flex max-w-6xl items-center justify-between px-6 py-5 text-sm uppercase tracking-[0.2em] text-white"
  : "mx-auto flex max-w-6xl items-center justify-between px-6 py-5 text-sm uppercase tracking-[0.2em] text-ink";
---
<header class={isOverlay ? "absolute inset-x-0 top-0 z-20" : "sticky top-0 z-30 bg-paper/95 backdrop-blur border-b border-sand"}>
  <nav class={navClass}>
    <a href="/" class="font-display text-lg normal-case tracking-wide">Logo</a>
    <div class="hidden items-center gap-8 md:flex">
      <a href="/" class={isOverlay ? "hover:text-white/70 transition" : "hover:text-accent transition"}>Home</a>
      <a href="/templates" class={isOverlay ? "hover:text-white/70 transition" : "hover:text-accent transition"}>Plantillas</a>
      <a href="/faq" class={isOverlay ? "hover:text-white/70 transition" : "hover:text-accent transition"}>FAQ</a>
      <a href="/contacto" class={isOverlay ? "hover:text-white/70 transition" : "hover:text-accent transition"}>Contacto</a>
      <a href="/checkout" class={isOverlay ? "rounded-full bg-white px-5 py-2 text-xs font-semibold tracking-[0.2em] text-olive transition hover:bg-white/80" : "rounded-full bg-olive px-5 py-2 text-xs font-semibold tracking-[0.2em] text-white transition hover:bg-olive-soft"}>Ordenar</a>
    </div>
    <button class={isOverlay ? "md:hidden rounded-full border border-white/60 px-4 py-2 text-xs font-semibold tracking-[0.2em] text-white" : "md:hidden rounded-full border border-sand px-4 py-2 text-xs font-semibold tracking-[0.2em]"}>Menu</button>
  </nav>
</header>
